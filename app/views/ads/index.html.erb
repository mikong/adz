<h1>Ads</h1>

<div class="spacer"></div>

<table>
  <tr>
    <th>Sponsor</th>
    <th>Keywords</th>
    <th class="long-text">Custom Ad</th>
    <th colspan="3">Actions</th>
  </tr>
  
<% @ads.each do |ad| %>
  <tr>
    <td><%=h ad.sponsor %></td>
    <td><%=h ad.word_list %></td>
    <td><%=h ad.text %></td>
    <td><%= link_to 'Show', resource(ad) %></td>
    <td><%= link_to 'Edit', resource(ad, :edit) %></td>
    <td><%= delete_button(ad, "Delete") %></td>
  </tr>
<% end %>
</table>

<div class="spacer"></div>

<%= link_to 'New Ad', resource(:ads, :new) %>